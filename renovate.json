{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "kubernetes": {
    "fileMatch": ["\\.yaml$", "\\.yml$"]
  },
  "regexManagers": [
    {
      "fileMatch": ["workflow.py$"],
      "matchStrings": [
        "\\image=\"(?<currentValue>.*)\"/[^\\s]*"
      ]
    }
  ],
  "branchConcurrentLimit": 0,
  "prConcurrentLimit": 0,
  "prHourlyLimit": 0
}
