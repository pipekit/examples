{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "kubernetes": {
    "fileMatch": ["\\.yaml$", "\\.yml$"]
  },
  "customManagers": [
    {
      "customType": "regex",
      "fileMatch": ["^workflow.py$"],
      "matchStrings": ["image=\"(?<currentValue>.*?)\""],
      "depNameTemplate": "kubernetes",
      "datasourceTemplate": "docker"
    }
  ],
  "branchConcurrentLimit": 0,
  "prConcurrentLimit": 0,
  "prHourlyLimit": 0
}
